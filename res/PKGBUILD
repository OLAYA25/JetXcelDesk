pkgname=jetxceldesk
pkgver=1.4.5
pkgrel=0
epoch=
pkgdesc=""
arch=('x86_64')
url=""
license=('AGPL-3.0')
groups=()
depends=('gtk3' 'xdotool' 'libxcb' 'libxfixes' 'alsa-lib' 'libva' 'libappindicator-gtk3' 'pam' 'gst-plugins-base' 'gst-plugin-pipewire')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=pacman_install
changelog=
noextract=()
md5sums=() #generate with 'makepkg -g'

package() {
  if [[ ${FLUTTER} ]]; then
	  mkdir -p "${pkgdir}/usr/share/jetxceldesk" && cp -r ${HBB}/flutter/build/linux/x64/release/bundle/* -t "${pkgdir}/usr/share/jetxceldesk"
  fi
  mkdir -p "${pkgdir}/usr/bin"
  pushd ${pkgdir} && ln -s /usr/share/jetxceldesk/jetxceldesk usr/bin/jetxceldesk && popd
  install -Dm 644 $HBB/res/jetxceldesk.service -t "${pkgdir}/usr/share/jetxceldesk/files"
  install -Dm 644 $HBB/res/jetxceldesk.desktop -t "${pkgdir}/usr/share/jetxceldesk/files"
  install -Dm 644 $HBB/res/jetxceldesk-link.desktop -t "${pkgdir}/usr/share/jetxceldesk/files"
  install -Dm 644 $HBB/res/128x128@2x.png "${pkgdir}/usr/share/icons/hicolor/256x256/apps/jetxceldesk.png"
  install -Dm 644 $HBB/res/scalable.svg "${pkgdir}/usr/share/icons/hicolor/scalable/apps/jetxceldesk.svg"
}
